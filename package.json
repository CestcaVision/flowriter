{
  "name": "flowriter",
  "displayName": "flowriter",
  "description": "A simple VS Code extension.",
  "publisher": "Tricrepe",
  "repository": "https://github.com/CestcaVision/flowriter.git",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:python",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:json",
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flowriter.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "flowriter.getDefinitionCommand",
        "title": "flowriter: Get Definition"
      },
      {
        "command": "flowriter.getTranslationCommand",
        "title": "flowriter: Get Translation"
      }
    ],
    "configuration": {
      "title": "flowriter",
      "properties": {
        "flowriter.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for the LLM service."
        },
        "flowriter.modelName": {
          "type": "string",
          "default": "",
          "description": "The model name to use for the LLM API."
        },
        "flowriter.apiEndpoint": {
          "type": "string",
          "default": "https://api.example.com/v1/chat/completions",
          "description": "The API endpoint for the LLM service."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.9",
    "eslint": "^9.9.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "openai": "^5.12.2"
  }
}